<Page x:Class="hacker_news_wpf_client.TrendingStories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hacker_news_wpf_client"
      xmlns:controls="clr-namespace:hacker_news_wpf_client.Controls"
      mc:Ignorable="d" 
      Title="TrendingStories">

    <StackPanel Orientation="Vertical">
        <TextBlock> Trending stories</TextBlock>
        <Button Height="50" Background="Transparent" BorderThickness="0" BorderBrush="#424242">
            <Hyperlink NavigateUri="BestStories.xaml">Best</Hyperlink>
        </Button>

        <controls:StoryListControl DataContext="{Binding TrendingStories}"/>
    </StackPanel>
</Page>
