<Window x:Class="hacker_news_wpf_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hacker_news_wpf_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Label Content="Loading..." Visibility="{Binding Story.IsNotCompleted,
            Converter={StaticResource BooleanToVisibilityConverter}}"/>
        
        <!-- Results -->
        <Label Content="{Binding Story.Result.title}" 
               Visibility="{Binding Story.IsSuccessfullyCompleted,
               Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Error details -->
        <Label Content="{Binding Story.ErrorMessage}" 
                Background="Red"
                Visibility="{Binding Story.IsFaulted,
                Converter={StaticResource BooleanToVisibilityConverter}}"/>

    </Grid>
</Window>
