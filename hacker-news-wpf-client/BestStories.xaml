<Page x:Class="hacker_news_wpf_client.BestStories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hacker_news_wpf_client"
      xmlns:controls="clr-namespace:hacker_news_wpf_client.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BestStories">

    <StackPanel Orientation="Vertical">
        <TextBlock>Best stories</TextBlock>
        <controls:StoryListControl DataContext="{Binding BestStories}"/>
    </StackPanel>
</Page>
