<UserControl x:Class="hacker_news_wpf_client.Controls.StoryItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hacker_news_wpf_client.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Score}"></Label>
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding Title}"></Label>
                <Label Content="{Binding Url}"></Label>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding NumberOfComments}"></Label>
                    <Label Content=" comments"></Label>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
